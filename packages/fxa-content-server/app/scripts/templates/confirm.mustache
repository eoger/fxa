<div id="main-content" class="card confirm-{{#isSignUp}}signup{{/isSignUp}}{{#isSignIn}}signin{{/isSignIn}}">
  <header>
    {{#isSignUp}}
      {{#isTrailhead}}
      <div class="step step-3"></div>
      <div class="error"></div>
      <div class="success"></div>
      <h1 id="fxa-confirm-header">{{#t}}One last step{{/t}}</h1>
      {{/isTrailhead}}
      {{^isTrailhead}}
        <h1 id="fxa-confirm-header">{{#t}}Enter verification code{{/t}}</h1>
      {{/isTrailhead}}
      {{/isSignUp}}
    {{#isSignIn}}
    <h1 id="fxa-confirm-signin-header">{{#t}}Confirm this sign-in{{/t}}</h1>
    {{/isSignIn}}
  </header>

  <section>
    {{^isTrailhead}}
      <div class="error"></div>
      <div class="success"></div>
    {{/isTrailhead}}

    <div class="graphic graphic-mail"></div>

{{#mustEnterCode}}
    <p class="verification-email-message">{{#unsafeTranslate}}Please enter the verification code that was sent to %(escapedEmail)s within 20 minutes.{{/unsafeTranslate}}</p>
    <form novalidate>
        <div class="input-row">
            <input type="text" pattern="\d+" name="signupCode" placeholder="{{#t}}Enter 6-digit code{{/t}}" autofocus />
        </div>
        <div class="button-row">
            <button id="submit-btn" type="submit">{{#t}}Verify{{/t}}</button>
        </div>
        <div class="links">
            <a id="resend" class="left delayed-fadein" href="#">{{#t}}Not in inbox or spam folder? Resend{{/t}}</a>
        </div>
    </form>
{{/mustEnterCode}}
{{^mustEnterCode}}
    {{#isSignUp}}
      {{#isTrailhead}}
        <p class="verification-email-message">{{#unsafeTranslate}}Check %(escapedEmail)s for a confirmation link and weâ€™ll get you on your way.{{/unsafeTranslate}}</p>
      {{/isTrailhead}}
      {{^isTrailhead}}
        <p class="verification-email-message">{{#unsafeTranslate}}Check your email for the verification link sent&nbsp;to %(escapedEmail)s{{/unsafeTranslate}}</p>
      {{/isTrailhead}}
    {{/isSignUp}}
    {{#isSignIn}}
    <p class="verification-email-message">{{#unsafeTranslate}}Check your email for the sign-in confirmation link sent to %(escapedEmail)s{{/unsafeTranslate}}</p>
    {{/isSignIn}}

    {{#isOpenWebmailButtonVisible}}
      <div class="button-row">
        <a href="{{{ escapedWebmailLink }}}" data-webmail-type="{{webmailType}}" class="button primary-button" target="_blank" id="open-webmail" type="button">{{webmailButtonText}}</a>
      </div>
    {{/isOpenWebmailButtonVisible}}

    <div class="links">
      {{^canGoBack}}
        <a id="resend" class="delayed-fadein" href="#">{{#t}}Not in inbox or spam folder? Resend{{/t}}</a>
      {{/canGoBack}}
      {{#canGoBack}}
        <a id="resend" class="left delayed-fadein" href="#">{{#t}}Not in inbox or spam folder? Resend{{/t}}</a>
        <a id="back" class="right delayed-fadein" href="#">{{#t}}Back{{/t}}</a>
      {{/canGoBack}}
    </div>
{{/mustEnterCode}}
  </section>
</div>
