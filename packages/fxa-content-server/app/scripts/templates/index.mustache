<div id="main-content" class="card">
  <header>
    <h1 id="fxa-enter-email-header">
      {{#isTrailhead}}
        {{#t}}Enter your email{{/t}}
      {{/isTrailhead}}
      {{^isTrailhead}}
        {{#serviceName}}
          <!-- L10N: For languages structured like English, the second phrase can read "to continue to %(serviceName)s" -->
          {{#t}}Enter your email{{/t}} <span class="service">{{#t}}Continue to %(serviceName)s{{/t}}</span>
        {{/serviceName}}
        {{^serviceName}}
          {{#t}}Enter your email{{/t}}
        {{/serviceName}}
      {{/isTrailhead}}
    </h1>
  </header>

  <section>
    <div class="error"></div>
    <div class="success"></div>

    <form novalidate>
      <div class="input-row">
        <input name="email" type="email" class="email tooltip-below" autofocus placeholder="{{#t}}Email{{/t}}"/>
      </div>

      <div class="tos-pp faint">
        {{#unsafeTranslate}}By proceeding, you agree to the <a id="fxa-tos" href="/legal/terms" tabindex="-1">Terms of Service</a> and <a id="fxa-pp" href="/legal/privacy" tabindex="-1">Privacy Notice</a>.{{/unsafeTranslate}}
      </div>

      <div class="button-row">
        <button id="submit-btn" type="submit">{{#t}}Continue{{/t}}</button>
      </div>
    </form>
    {{#isTrailhead}}
      {{{ unsafeFirefoxFamilyHTML }}}
    {{/isTrailhead}}
  </section>
</div>
